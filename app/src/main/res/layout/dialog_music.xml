<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="360dp"
    android:layout_gravity="center">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="25dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background_color">

            <ImageView
                android:id="@+id/icClose"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="16dp"
                android:layout_marginRight="18dp"
                android:src="@drawable/skip_icon"
                app:tint="#FFFFFF"/>

            <TextView
                android:id="@+id/textPlayMusic"
                android:layout_width="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/saira_condensed_extrabold"
                android:text="PLAY MUSIC"
                android:textColor="#F2FFFFFF"
                android:textSize="30sp" />
            <RelativeLayout
                android:id="@+id/ButtonMusicLayout"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_below="@+id/textPlayMusic"
                android:layout_centerHorizontal="true"
                android:background="@drawable/settings_circles"
                android:layout_marginTop="8dp">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    app:srcCompat="@drawable/ic_music_bars"
                    android:layout_centerInParent="true"/>

                <Button
                    android:id="@+id/btnMusic"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/transparent_button"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/textCheckPlaylist"
                android:layout_width="wrap_content"
                android:layout_below="@+id/ButtonMusicLayout"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/saira_bold"
                android:text="CHECK OUT OUR SPOTIFY\nPLAYLISTS"
                android:gravity="center"
                android:textColor="#F2FFFFFF"
                android:textSize="20sp" />
            <RelativeLayout
                android:id="@+id/ButtonSpotifyLayout"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_below="@+id/textCheckPlaylist"
                android:layout_centerHorizontal="true"
                android:background="@drawable/settings_circles"
                android:layout_marginTop="8dp">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    app:srcCompat="@drawable/ic_spotify"
                    android:layout_centerInParent="true"/>

                <Button
                    android:id="@+id/btnSpotify"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/transparent_button"/>
            </RelativeLayout>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>